#module load %MODULES%
module load prod_util
module load ics
module load ibmpe
module load lsf
module load mpiserial

export FORT_BUFFERED=true
export NWPSplatform="DEVWCOSS"
export MP_PGMMODEL=mpmd
export MP_CSS_INTERRUPT=yes
export WFO="%WFO%"
export siteid=${WFO}
export SITEID=${WFO^^}
export N="0"
export KEEPDATA="YES"
export model="nwps"
export MODEL=${model^^}

export envir="para"

export DEVWCOSS_USER=$(whoami)
export COMROOT=/ptmpp1/${DEVWCOSS_USER}/data/com

#Dev environment value for $job
export job=pnwps_${WFO}_pd_cg0
export jobid=pnwps_${WFO}_pd_cg0.$$

#Dev environment jlogfile
mkdir -p ${COMROOT}/logs/${envir}
export jlogfile=${COMROOT}/logs/${envir}/jlogfile.${job}

if [ -e /gpfs/gd1 ]
then
   echo "INFO - WCOSS is on GYRE system"
   export  WCOSS_SYSTEM="gd1"
fi
if [ -e /gpfs/td1 ]
then
   echo "INFO - WCOSS is on TIDE system"
   export WCOSS_SYSTEM="td1"
fi

export NWROOT="/gpfs/${WCOSS_SYSTEM}/emc/marine/save/${DEVWCOSS_USER}/NWPS/IT_NWPS_WCOSS_ver1.0_20150729"

VERSION_FILE=${NWROOT}/dev/nwps_test.ver
if [ -f $VERSION_FILE ]; then
  . $VERSION_FILE
else
  ECFNAME="jnwps_prdgen_cg${N}.ecf"
  echo "***JOB ${ECFNAME} ERROR: Version File $VERSION_FILE does not exist ***"
  exit
fi

# Wait for upstream component job to finish
while [ -z $(grep 'COMPLETED NORMALLY' ${COMROOT}/logs/${envir}/jlogfile.pnwps_%WFO%_wt_cg1 | awk '{print $1}') ]
do
   if [ ! -z $(grep 'FAILED' ${COMROOT}/logs/${envir}/jlogfile.pnwps_%WFO%_wt_cg1 | awk '{print $1}') ]
   then
       msg="FATAL ERROR: Upstream job pnwps_%WFO%_wt_cg1 failed"
       postmsg "$jlogfile" "$msg"
       export err=1; err_chk
   fi
   echo 'Waiting for pnwps_%WFO%_wt_cg1 to complete, at date'
   date
   sleep 60
done

${NWROOT}/dev/jobs/J${MODEL}_PRDGEN

