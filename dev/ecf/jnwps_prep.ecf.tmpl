module load prod_util
module load ics
module load ibmpe
module load lsf
module load mpiserial

module list

export FORT_BUFFERED=true
export NWPSplatform="DEVWCOSS"
export MP_PGMMODEL=mpmd
export MP_CSS_INTERRUPT=yes
export WFO="%WFO%"
export siteid=${WFO}
export SITEID=${WFO^^}
export KEEPDATA="YES"
export model="nwps"
export MODEL=${model^^}

export envir="para"

export DEVWCOSS_USER=$(whoami)
export COMROOT=/ptmpp1/${DEVWCOSS_USER}/data/com

#Dev environment value for $job and $jobid
export job=pnwps_${WFO}_prep
export jobid=pnwps_${WFO}_prep.$$

#Dev environment jlogfile
mkdir -p ${COMROOT}/logs/${envir}
export jlogfile=${COMROOT}/logs/${envir}/jlogfile.${job}

if [ -e /gpfs/gd1 ]
then
   echo "INFO - WCOSS is on GYRE system"
   export  WCOSS_SYSTEM="gd1"
fi
if [ -e /gpfs/td1 ]
then
   echo "INFO - WCOSS is on TIDE system"
   export WCOSS_SYSTEM="td1"
fi

export NWROOT="/gpfs/${WCOSS_SYSTEM}/emc/marine/save/${DEVWCOSS_USER}/NWPS/IT_NWPS_WCOSS_ver1.0_20150729"

VERSION_FILE=${NWROOT}/dev/nwps_test.ver
if [ -f $VERSION_FILE ]; then
  . $VERSION_FILE
else
  ECFNAME="jnwps_prep.ecf"
  echo "***JOB ${ECFNAME} ERROR: Version File $VERSION_FILE does not exist ***"
  exit
fi

${NWROOT}/dev/jobs/J${MODEL}_PREP

