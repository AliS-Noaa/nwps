#!/bin/bash --login
# --------------------------------------------------------------------------- #
#                                                                             #
# nwps_rsync.cron : Script manages the rsyncing the NWPS results              #
#             ${workdir}/nwps_rsync_dev.lsf                                   #
#                                                                             #
# Remarks   - Can be run interactively, or from LL.                           #
#                                                                             #
# Last Changed : 01-03-2017                                     January 2017  #
# ----------------------------------------------------------------------------#

# Set up the modules

#. /usrx/local/Modules/3.2.9/init/bash
module load prod_envir
module load prod_util
#module load ics
#module load ibmpe
#module load lsf
module load alps
module load xt-lsfhpc

module list

# 0.a Set necessary variables
workdir=$HOME

# 0.b Host assessment

export script='nwps_rsync_ret.cron'
export runon='dev'

  echo '                  ***********************************************'
  echo '                  *** NWPS HOOK-IN SCRIPT nwps_rsync_ret.cron ***'
  echo '                  ***********************************************'
  echo ' '
  echo " Time : `date`"
  echo ' '
  echo '        Host assessment :'
  echo '        ------------------------------------------------------------'
  echo "           script to run      : $script"
  echo "           running on         : $runon"

  export host_s="`cat /etc/HOSTNAME | cut -c1-1`"
  case $host_s in
   's' ) host='surge' ;;
   'l' ) host='luna' ;;
    *  ) echo ' '
         echo ' *****************************'
         echo " *** HOST $host_s NOT RECOGNIZED ***"
         echo ' *****************************'
         echo ' '
         date=`date -u +"%Y%m%d t%Hz"`
         echo "nwps.cron $date : host [$host] not recognized." >> $weblog
         exit 1 ;;
  esac

  echo ' '
  echo "           host machine       : $host"

  prod=`cat /etc/prod | awk '{ print $1 }'`
  echo "           production  mach.  : $prod"

  if [ "$runon" = 'none' ]
  then
    target='none'
  else
    target=`cat /etc/$runon | awk '{ print $1 }'`
  fi
  echo "           running on         : $runon [$target]"

  if [ "$host" != "$target" ]
  then
    echo ' '
    echo " Time : `date`"
    echo ' '
    echo ' '
    echo '                        *** End of nwps_rsync_ret.cron ***'
    exit 0
  fi

# --------------------------------------------------------------------------- #
# 1.  Manage batch job

  echo " "
  echo "        -> Submitting nwps_rsync_ret.lsf at: `date`"
  bsub < ${workdir}/nwps_rsync_ret.lsf
  echo " "

# --------------------------------------------------------------------------- #
# 2.  End of all.

  echo ' '
  echo ' '
  echo " Time : `date`"
  echo ' '
  echo '                        *** End of nwps_rsync_ret.cron ***'

# - end of nwps_rsync_ret.cron ---------------------------------------------- #
