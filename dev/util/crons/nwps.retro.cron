#!/bin/bash --login
# --------------------------------------------------------------------------- #
#                                                                             #
# nwps.cron : This script manages the running of the parallel script          #
#             ${NWPSdir}/dev/ecf/jnwps_datachk.ecf                            #
#                                                                             #
# Remarks   - Set the WFOs to process in ${NWPSdir}/parm/wfo_dev.tbl          #
#                                                                             #
# Last Changed : 12-05-2015                                    December 2015  #
# --------------------------------------------------------------------------- #

# Set up the modules

#. /usrx/local/Modules/3.2.9/init/bash
module load prod_envir
module load prod_util
#module load ics
#module load ibmpe
#module load lsf
module load alps
module load xt-lsfhpc

module list

# 0. Host assessment

export script='nwps.rerto.cron'
export runon='dev'

  echo '                  ****************************************'
  echo '                  *** NWPS HOOK-IN SCRIPT nwps.rerto.cron ***'
  echo '                  ****************************************'
  echo ' '
  echo " Time : `date`"
  echo ' '
  echo '        Host assessment :'
  echo '        ------------------------------------------------------------'
  echo "           script to run      : $script"
  echo "           running on         : $runon"

  export host_s="`cat /etc/HOSTNAME | cut -c1-1`"
  case $host_s in
   's' ) host='surge' ;;
   'l' ) host='luna' ;;
    *  ) echo ' '
         echo ' *****************************'
         echo " *** HOST $host_s NOT RECOGNIZED ***"
         echo ' *****************************'
         echo ' '
         date=`date -u +"%Y%m%d t%Hz"`
         echo "nwps.rerto.cron $date : host [$host] not recognized." >> $weblog
         exit 1 ;;
  esac

  echo ' '
  echo "           host machine       : $host"

  prod=`cat /etc/prod | awk '{ print $1 }'`
  echo "           production  mach.  : $prod"

  if [ "$runon" = 'none' ]
  then
    target='none'
  else
    target=`cat /etc/$runon | awk '{ print $1 }'`
  fi
  echo "           running on         : $runon [$target]"

  if [ "$host" != "$target" ]
  then
    echo ' '
    echo " Time : `date`"
    echo ' '
    echo ' '
    echo '                        *** End of nwps.rerto.cron ***'
    exit 0
  fi

# --------------------------------------------------------------------------- #
# 1.  Manage batch job

  echo " "
  echo "        -> Submitting jnwps_datachk_ret.ecf at: `date`"
  ${NWPSdir}/dev/ecf/jnwps_datachk_ret.ecf
  echo " "

# --------------------------------------------------------------------------- #
# 2.  End of all.

  echo ' '
  echo ' '
  echo " Time : `date`"
  echo ' '
  echo '                        *** End of nwps.retro.cron ***'

# - end of nwps.retro.cron ----------------------------------------------------- #
