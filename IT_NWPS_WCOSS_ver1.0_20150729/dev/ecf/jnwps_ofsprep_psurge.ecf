#module load %MODULES%
. /usrx/local/Modules/3.2.9/init/bash
module load prod_util
module load ics
module load ibmpe
module load cfp
module load lsf

module list

export FORT_BUFFERED=true
export NWPSplatform="DEVWCOSS"
export MP_PGMMODEL=mpmd
export MP_CSS_INTERRUPT=yes
export KEEPDATA="YES"
export model="nwps"
export MODEL=${model^^}

export envir="para"

export DEVWCOSS_USER=$(whoami)
export COMROOT=/ptmpp1/${DEVWCOSS_USER}/data/ofs/com

#Dev environment value for $job and $jobid
export job=pnwps_ofs_psurge
export jobid=pnwps_ofs_psurge.$$

#Dev environment jlogfile
mkdir -p ${COMROOT}/logs/${envir}
export jlogfile=${COMROOT}/logs/${envir}/jlogfile.${job}

#
#************IMPORTANT ****************
#* ADJUST THE PSURGE FIELDS TIME STEP *
#* IN  scripts/exnwps_ofs_prep.sh.ecf    *
#**************************************
#
if [ -e /gpfs/gd1 ]
then
   echo "INFO - WCOSS is on GYRE system"
   export  WCOSS_SYSTEM="gd1"
fi
if [ -e /gpfs/td1 ]
then
   echo "INFO - WCOSS is on TIDE system"
   export WCOSS_SYSTEM="td1"
fi
export DEVWCOSS_USER=$(whoami)
export NWROOT="/gpfs/${WCOSS_SYSTEM}/emc/marine/save/${DEVWCOSS_USER}/NWPS/IT_NWPS_WCOSS_ver1.0_20150729"

VERSION_FILE=${NWROOT}/dev/psurge2nwps_test.ver
if [ -f $VERSION_FILE ]; then
  . $VERSION_FILE
else
  echo "***JOB ${job} ERROR: Version File $VERSION_FILE does not exist ***"
  exit
fi

export OFSTYPE="psurge"

${NWROOT}/dev/jobs/JNWPS_OFSPREP

